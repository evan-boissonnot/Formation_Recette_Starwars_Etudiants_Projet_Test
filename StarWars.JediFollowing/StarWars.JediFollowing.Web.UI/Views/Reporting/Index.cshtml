@using StarWars.JediFollowing.Web.UI.Models
@model List<PadawanReportModel>

<link href="http://visjs.org/dist/vis.css" rel="stylesheet" type="text/css">

@{
    ViewBag.Title = "Rapport";
    var culture = new System.Globalization.CultureInfo("en-US");
}

<h2>Niveau des élèves</h2>

<canvas id="myChart" width="400" height="400"></canvas>
<script type="text/javascript">
    var ctx = document.getElementById("myChart").getContext('2d');

    @{
        var labels = string.Empty;
        var values = string.Empty;
    }
    @foreach (var item in Model)
    {
        string row = string.Format("'{0}'", item.PadawanName);
        labels += row + ",";

        values += item.Average.ToString("##.##", culture) + ",";
    }
    @{ 
        labels = labels.Remove(labels.Length - 1, 1);
        values = values.Remove(values.Length - 1, 1);
    }

    var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: [@Html.Raw(labels)],
        datasets: [{
            label: 'Notes',
            data: [@Html.Raw(values)],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});

</script>